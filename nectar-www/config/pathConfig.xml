<?xml version="1.0" encoding="UTF-8"?>

<pathConfig>
	<project namespace="">
		<action name="indexAction" package="org.nectarframework.www.action"
			class="IndexAction" form="index" defaultOutput="template"
			templateName="index" />
		<action name="articleView" package="org.nectarframework.www.action"
			class="ArticleViewAction" form="articleView" defaultOutput="template"
			templateName="articleView" />
		<form name="index">
		</form>
		<form name="articleView">
			<var name="id" type="int" required="true" minValue="0"/>
		</form>
		
		<path path="index" action="indexAction" />
		<path path="" action="indexAction" />
		<path path="articleView" action="articleView" />

		<redirect path="overview" toPath="articleView">
			<var name="id" value="2"/>
		</redirect>
		<redirect path="documentation" toPath="articleView">
			<var name="id" value="3"/>
		</redirect>
		<redirect path="download" toPath="articleView">
			<var name="id" value="4"/>
		</redirect>
		<redirect path="about" toPath="articleView">
			<var name="id" value="5"/>
		</redirect>

		<proxy path="mantis" protocol="http" port="8000" host="www.nectarframework.org" requestPath="/mantis/"></proxy>

		<static path="s" toPath="s"/>

	</project>

</pathConfig>